{
  "compilerOptions": {
    "baseUrl": "./src/*",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2022",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src/**/*",
    "src/main.jsx"
  ]
}